import curses # The curses library supplies a terminal-independent screen-painting and keyboard-handling facility for text-based terminal
from random import randint
# Screen setup
curses.initscr()
win = curses.newwin(20,60,0,0) # y first x second
win.keypad(1) # Uses keypad
curses.noecho() # No echo to terminal
curses.curs_set(0) # Hides the cursor
win.border(0)
win.nodelay(1) # Not waiting for another user input, so the game continues with the last input

#snake and food
snake = [(4,10),(4,9),(4,8)] # Coordinates of the snake in a tuple of lists // Tuple values cannot be changed after init // Tuple is () , List is []
food = (10,20)


# game logic
score = 0
ESC = 27
key = curses.KEY_RIGHT #initial value
win.addch(food[0],food[1],'#')
while key != ESC: # ESC leaves the game
    win.addstr(0,2,'Score '+str(score)+ ' ') # Score counter

    win.timeout(150-len(snake)//5 + len(snake)//10 % 120) # increase speed based on snake length

    prev_key = key # previously pressed key

    event = win.getch() # Listens for the next input

    key = event if event != -1 else prev_key #next key is the currently pressed key, otherwise its prev_key

    if key not in [curses.KEY_LEFT, curses.KEY_RIGHT, curses.KEY_UP, curses.KEY_DOWN, ESC ]: # if the key is not one of the control keys
        key = prev_key 
        
    # Calculate the next coordinates
    y = snake[0][0]
    x = snake[0][1]

    if key == curses.KEY_DOWN:
        y += 1
    if key == curses.KEY_UP:
        y -= 1
    if key == curses.KEY_RIGHT:
        x += 1
    if key == curses.KEY_LEFT:
        x -= 1

    snake.insert(0, (y,x))

    # border

    if y in [0, 19]:
        break
    if x in [0, 59]:
        break

    # overlap

    if snake[0] in snake[1:]: break
        
    if snake[0] == food: 
        score+=1
        food=()
        while food == ():
            food = (randint(1,18),randint(1,58))
            if food in snake:
                food = ()
        win.addch(food[0],food[1],'#')
    else:
        # move snake
        last = snake.pop()
        win.addch(last[0],last[1],' ')



    win.addch(snake[0][0],snake[0][1],'*')


curses.endwin() # Disposes the window and returns to normal state
print(f"Final score: {score}")



